<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="319dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.985"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.531">

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="@string/save_button"
            android:textColor="#070707"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/reset"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/displayBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="13dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="@string/display_button"
            android:textColor="#070707"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/saveBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.507" />

        <Button
            android:id="@+id/reset"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginEnd="13dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="@string/reset"
            android:textColor="#070707"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/saveBtn"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="362dp"
        android:layout_height="304dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="181dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/teamA"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/teamA"
            android:layout_width="179dp"
            android:layout_height="45dp"
            android:hint="@string/teamA_hint"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/scoreA"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="181dp"
            android:layout_marginEnd="182dp"
            android:layout_marginBottom="359dp"
            android:backgroundTint="@android:color/darker_gray"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/teamB"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:hint="@string/teamB_hint"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/teamA"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scoreB"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginBottom="169dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#070707"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/scoreA"
            app:layout_constraintTop_toBottomOf="@+id/teamB" />

        <Button
            android:id="@+id/Apoints3"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="197dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="+3 Points"
            android:textColor="#070707"
            app:layout_constraintBottom_toTopOf="@+id/Apoints2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scoreA" />

        <Button
            android:id="@+id/Apoints2"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="198dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="+2 Points"
            android:textColor="#070707"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scoreA" />

        <Button
            android:id="@+id/Afree"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="196dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="Free throw"
            android:textColor="#070707"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scoreA" />

        <TextView
            android:id="@+id/scoreA"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginBottom="169dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#070707"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teamA" />

        <Button
            android:id="@+id/Bpoints3"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="196dp"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="+3 Points"
            android:textColor="#070707"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teamB" />

        <Button
            android:id="@+id/Bpoints2"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="196dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="+2 Points"
            android:textColor="#070707"
            app:layout_constraintBottom_toTopOf="@+id/Bfree"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Bpoints3" />

        <Button
            android:id="@+id/Bfree"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="196dp"
            android:layout_marginTop="199dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="Free throw"
            android:textColor="#070707"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teamB" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/winner"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="61dp"
        android:backgroundTint="#4CAF50"
        android:text="Winner"
        android:textColor="#0B0A0A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/winnerDisp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>